<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li style="list-style: none">
      <%= check_box_tag "[]", task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete",
      task_path(task),
      method: :delete,
      data: { confirm: "Delete #{task.title}?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to "+ Add a new task", tasks_new_path %></p>
